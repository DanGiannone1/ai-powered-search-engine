# Azure SQL Database connection settings
# --- SQL Authentication ---
AZURE_SQL_SERVER=<your-sql-server-name>.database.windows.net
AZURE_SQL_DATABASE=<your-database-name>
AZURE_SQL_USERNAME=<your-sql-username>
AZURE_SQL_PASSWORD=<your-sql-password>

# --- Microsoft Entra (Azure AD) Authentication ---
# For Service Principal authentication
AZURE_AD_CLIENT_ID=<your-entra-client-id>
AZURE_AD_TENANT_ID=<your-entra-tenant-id>
AZURE_AD_CLIENT_SECRET=<your-entra-client-secret>

# If using Managed Identity, set the following to true
AZURE_USE_MANAGED_IDENTITY=false

# --- Azure AI Search ---
AZURE_SEARCH_ENDPOINT=<your-search-endpoint-url>
AZURE_SEARCH_ADMIN_KEY=<your-search-admin-key>
AZURE_SEARCH_INDEX_NAME=<your-search-index-name>

# --- Azure OpenAI Embedding Model Deployment ---
AZURE_OPENAI_ENDPOINT=<your-openai-endpoint-url>
AZURE_OPENAI_API_KEY=<your-openai-api-key>
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=<your-embedding-deployment-name>
